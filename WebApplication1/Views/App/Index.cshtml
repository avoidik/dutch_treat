@{
    ViewBag.Title = "Home";
}
<div class="col-md-6">
    <div id="product-form">
        <img src="~/img/VanGogh.jpg" />
        <h3>Mug</h3>
        <ul class="product-props">
            <li>Price: $9.99</li>
            <li>Artist: Van Gogh</li>
            <li>Title: </li>
            <li>Description: Self-portrait</li>
        </ul>
        <button id="buy-button" class="btn btn-primary">Buy</button>
    </div>
    <div>
        <div id="login-toggle">Login</div>
        <form class="popup-form">
            <div>
                <label>Username</label>
                <input />
            </div>
            <div>
                <label>Password</label>
                <input type="password" />
            </div>
            <div>
                <input type="checkbox" />
                <label>Remember</label>
            </div>
            <div>
                <input type="submit" value="Login" />
            </div>
        </form>
    </div>
</div>